<div class="col-md-6 col-md-offset-3"> 
<h3><a href="/users">All Users</a></h3>
{{#each data}}
<h3>Add Task for User- {{this.name}}</h3>
<form action="/users/addtask" method="post">

<input type="hidden" value="{{this._id}}" name="userid">
{{/each}}
    <div class="form-group">
        <label for="email">Task Name:</label>
        <input type="text" class="form-control" name="taskname" id="taskname" value="">
    </div>
    <div class="form-group">
        <label for="name">Description:</label>
        <input type="textarea" class="form-control" name="description" id="description" value="">
    </div>
    <button class="btn btn-primary">Add</button>
</form>
</div>